<div class="shots">

	<ul class="item clearfix">
		<li class="hot">
			<div class="wrapper">
				<p>Top Reading</p>
				<p>Loved More</p>
				<p>Useful More</p>
			</div>
		</li>
		
		<% for(var i=0; i<item.length; i++) { %>  
		    <li>
		    	<div class="wrapper">
					<div class="pic">
						<img src="<%= item[i].pic %>">

						<a href="#">
							<div class="brief">
									<span class="title">111</span>
									<p>222</p>
									<span class="time">2 hours ago</span>
							</div>
						</a>
					</div>

					<div class="extras clearfix">
						<span class="js-like">
							<i class="fa fa-heart" aria-hidden="true"></i> 
							<em class="js-count"><%= item[i].love %></em>
						</span>
						<span class="js-itemId none"><%= item[i].itemId %></span>
						<span><i class="fa fa-eye" aria-hidden="true"></i></span>
					</div>
				</div>
			</li>
		<% } %>  
	</ul>

</div>

<script>

	$(document).ready(function() {
		
		$(".js-like").click(function() {

			var count = parseInt($(".js-count").html()) + 1;
			var itemId = $(this).siblings(".js-itemId").html();

			console.log($(this));

			$.ajax({
	
	            type : 'get',
	            context: $(this),
	            dataType:'json',
	            data: {
	            	id: itemId,
	            	count: count
	            }

			}).done(function() {

				$(this).addClass("liked");

			});

		});

	});

</script>